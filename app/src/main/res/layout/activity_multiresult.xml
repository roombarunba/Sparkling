<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nttr.sparkling.MultiresultActivity">

    <TextView
        android:id="@+id/MScoreResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Score : "
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Mbutton2"
        android:layout_width="133dp"
        android:layout_height="80dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Send"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/MrankOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MScoreResult"
        app:layout_constraintVertical_bias="0.984" />

    <TextView
        android:id="@+id/MrankTwo"
        android:layout_width="349dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
